<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds" debug="false">
    <springProfile name="dev">
        <property name="LOG_HOME" value="./log"/>
    </springProfile>
    <springProfile name="prod">
        <property name="LOG_HOME" value="../log"/>
    </springProfile>
    <property name="COLOR_LOG_PATTERN" value="%d{ISO8601}|%highlight(%p)|%t|%c|%L|%highlight(%X{traceId})|%m%ex%n"/>
    <property name="NORMAL_LOG_PATTERN" value="%d{ISO8601}|%p|%t|%c|%L|%X{traceId}|%m%ex%n"/>

    <!--输出到控制台 ConsoleAppender-->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${COLOR_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 输出 ERROR 日志到 error.log -->
    <appender name="ERROR-APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/error.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>500MB</maxFileSize>
            <!--按天轮转，保留 7*2 天-->
            <maxHistory>14</maxHistory>
            <!--最多存储 20 GB 的归档文件-->
            <totalSizeCap>20GB</totalSizeCap>
            <!-- 设置这个启动时MaxHistory才生效，才会删日志 -->
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>${NORMAL_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 只处理 ERROR -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!-- 所有日志到 biz.log -->
    <appender name="BIZ-APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/biz.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/biz.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>500MB</maxFileSize>
            <maxHistory>14</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
            <!-- 设置这个启动时MaxHistory才生效，才会删日志 -->
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>${NORMAL_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 异步输出 -->
    <appender name="ERROR-ASYNC-APPENDER" class="ch.qos.logback.classic.AsyncAppender">
        <!-- 不丢失日志。默认的，如果队列的80%已满，则会丢弃TRACT、DEBUG、INFO级别的日志 -->
        <discardingThreshold>0</discardingThreshold>
        <!-- 更改默认的队列的深度，该值会影响性能。默认值为256 -->
        <queueSize>1024</queueSize>
        <appender-ref ref="ERROR-APPENDER"/>
    </appender>
    <appender name="BIZ-ASYNC-APPENDER" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>1024</queueSize>
        <appender-ref ref="BIZ-APPENDER"/>
    </appender>

    <springProfile name="prod">
        <root level="info">
            <appender-ref ref="ERROR-ASYNC-APPENDER"/>
            <appender-ref ref="BIZ-ASYNC-APPENDER"/>
        </root>
    </springProfile>
    <springProfile name="dev">
        <root level="debug">
            <!-- 生产环境必需关闭 CONSOLE -->
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ERROR-ASYNC-APPENDER"/>
            <appender-ref ref="BIZ-ASYNC-APPENDER"/>
        </root>
    </springProfile>

</configuration>
